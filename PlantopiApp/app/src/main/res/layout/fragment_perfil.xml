            android:layout_height="wrap_content"
            android:text="Inicia sesión para ver esta información"
            style="@style/body_regular_xxxs"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Tienes Mascotas?"
            style="@style/headline_medium_xxs"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_preferencia5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicia sesión para ver esta información"
            style="@style/body_regular_xxxs"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>


</ScrollView>