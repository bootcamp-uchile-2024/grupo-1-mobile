<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_orange_green"
    tools:context=".register_fragments.Register_1st">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_plantoper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/montserrat_semibold"
                android:hapticFeedbackEnabled="false"
                android:layout_marginBottom="16dp"
                android:text="Información adicional de envío"
                android:textSize="20sp"
                android:theme="@style/headline_semibold_xs" />


            <TextView
                android:id="@+id/textView_Run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:padding="4dp"
                    android:src="@drawable/ic_person" />

                <EditText
                    android:id="@+id/editText_rut"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="Ingresa tu rut acá (sin puntos ni guión)"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:src="@drawable/ic_local_phone_24" />

                <EditText
                    android:id="@+id/editText_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Ingresa tu teléfono aquí"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:src="@drawable/ic_my_location_24" />

                <EditText
                    android:id="@+id/editText_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Ingresa tu dirección aquí"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_contrasena_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comuna"
                android:textAlignment="textStart"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:src="@drawable/ic_lock_open"
                    />

                <EditText
                    android:id="@+id/editText_comuna"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:hint="Ingresa tu comuna aquí"
                    android:inputType="textEmailAddress"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="right"
                    android:src="@drawable/ic_remove_eye" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_contrasena2_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código Postal"
                android:textAlignment="textStart"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:src="@drawable/ic_codigopostal"
                    />

                <EditText
                    android:id="@+id/editText_codigo_postal"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:hint="Ingresa tu código postal aquí"
                    android:inputType="textEmailAddress"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="right"
                    android:src="@drawable/ic_remove_eye" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_register_adicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="Agregar datos adicionales"
                android:textAllCaps="false"
                android:textColor="@color/Buttons_Primary_Text_text_primary_light"
                android:theme="@style/headline_semibold_xxs"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_fragment_first"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sin_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="Continuar sin agregar info"
                android:textAllCaps="false"
                android:textColor="@color/Buttons_Primary_Text_text_primary_light"
                android:theme="@style/headline_semibold_xxs"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_fragment_first"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>