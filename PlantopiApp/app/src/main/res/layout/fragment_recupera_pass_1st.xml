<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_orange_green"
    tools:context=".register_fragments.Register_1st">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:gravity="top|center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <ImageView
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="6dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/shape_circle_degradado"
                android:src="@drawable/ic_outgoing_mail"
                app:tint="@color/Buttons_Primary_Background_primary_button_light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:hapticFeedbackEnabled="false"
                android:text="@string/string_recupera_mail"
                android:textSize="20sp"
                android:theme="@style/headline_semibold_xs" />

            <TextView
                android:id="@+id/textView_plantoper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:hapticFeedbackEnabled="false"
                android:text="@string/string_recupera_indicaciones"
                android:theme="@style/body_regular_xxxs" />

            <TextView
                android:id="@+id/textView_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_email"
                android:theme="@style/headline_medium_xxs" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/circle_icon"
                    android:src="@drawable/ic_email" />

                <EditText
                    android:id="@+id/editText_correo_registro"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="@string/string_ingresa_correo"
                    android:theme="@style/hint_medium_xxs"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_recover1st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:text="@string/string_recupera_enviar"
                android:textAllCaps="false"
                android:textColor="@color/Buttons_Primary_Text_text_primary_light"
                android:theme="@style/headline_semibold_xxs"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_fragment_first"
                />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>