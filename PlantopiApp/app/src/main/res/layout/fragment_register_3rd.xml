<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_orange_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="48dp"
    android:paddingBottom="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Â¿Tienes experiencia cuidando plantas?"
        android:theme="@style/headline_semibold_s"
        android:textColor="@color/Icons_background_color_light"
        android:layout_margin="28dp"/>


    <LinearLayout
        android:id="@+id/ly_option_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_encuesta"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_icon"
            android:backgroundTint="#0F3C491E"
            android:src="@drawable/ic_cuidado_bajo"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soy Principiante"
                android:theme="@style/headline_semibold_xxs"
                android:textColor="#55662C"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiero algo sencillo de cuidar"
                android:theme="@style/body_regular_xxxs"
                android:textColor="#767871"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_option_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_encuesta"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_icon"
            android:backgroundTint="#0F3C491E"
            android:src="@drawable/ic_cuidado_bajo"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tengo experiencia"
                android:theme="@style/headline_semibold_xxs"
                android:textColor="#55662C"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya he cuidado algunas plantas"
                android:theme="@style/body_regular_xxxs"
                android:textColor="#767871"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_option_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_encuesta"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_icon"
            android:backgroundTint="#0F3C491E"
            android:src="@drawable/ic_cuidado_bajo"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soy experto/a"
                android:theme="@style/headline_semibold_xxs"
                android:textColor="#55662C"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuento con amplio conocimiento"
                android:theme="@style/body_regular_xxxs"
                android:textColor="#767871"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continuar_encuesta"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continuar"
        android:layout_marginTop="142dp"
        android:theme="@style/headline_semibold_xxs"
        android:backgroundTint="@color/Icons_background_color_light"
        android:textColor="#DAEA98"/>

</LinearLayout>