    <style name="CustomActiveIndicatorStyle" parent="">
        <!-- Set the custom shape -->
        <item name="android:background">@drawable/shape_background_selected</item>

    </style>

    <style name="Theme.MyApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationStyle</item>
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicatorStyle</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
    </style>

    <style name="CustomChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/Buttons_Primary_Background_primary_button_light</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/Buttons_Primary_Text_text_primary_light</item>
        <item name="android:textColor">@color/Buttons_Primary_Background_primary_button_light</item>
        <item name="chipMinHeight">30dp</item>
    </style>

    <style name="CustomChip_Selected" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/Buttons_Primary_Background_primary_button_light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="chipMinHeight">30dp</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">#F8AE93</item>
    </style>






</resources>