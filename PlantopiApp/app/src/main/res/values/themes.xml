        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/Semantic_Text_primary_subheadline_light</item>
    </style>

    <style name="headline_semibold_s" parent="Theme.Material3.Light.NoActionBar">
